<section>
  <div class="container">
    <div class="row">
      <div class="col-sm-6" id="showBurgers">
        <div class="card special-card">
          <div class="card-body">
            <h2>Burgers</h2>
            {{#each burgers}} {{#unless this.devoured}}
            <div class="list">
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <span>{{this.id}}. {{this.burger_name}}</span>
                <button type="submit" class="btn btn-sm float-right">Eat</button>
              </form>
            </div>
            {{/unless}} {{/each}}
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-6" id="showDevouredBurgers">
      <div class="card special-card">
        <div class="card-body">
          <h2>Yummy</h2>
          <ul>
            {{#each burgers}} {{#if this.devoured}}
            <li>
              <div>
                <span>{{this.id}}. {{this.burger_name}}</span>
              </div>
            </li>
            {{/if}} {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>